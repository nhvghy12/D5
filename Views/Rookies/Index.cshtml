@model List<Person>
@{
    ViewData["Title"] = "Member List";
}

<div class="text-center">
    <h1 class="display-4">Member List</h1>
    <div class="d-flex flex-row">
        @* <a class="btn btn-primary" href="@Url.Action("Create", "Rookies")">Create New Member</a>
        @Html.ActionLink("Create New Member","Create","Rookies", null, htmlAttributes: new { @class = "btn btn-secondary"}) *@
        <a class="btn btn-success" asp-action="Create" asp-controller="Rookies">Create New Member</a>
    </div>
    <div>
        <table class="table">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Gender</th>
                <th scope="col">DateofBirth</th>
                <th scope="col">Age</th>
                <th scope="col">BirthPlace</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @for (int index = 1; index <= Model.Count; index++)
                    {
                        var person = Model[index - 1];
                        <tr>
                            <th scope="row">@index</th>
                            <td>@person.FullName</td>
                            <td>@person.Gender</td>
                            <td>@person.DateOfBirth.ToString("dd MMM yyyy")</td>
                            <td>@person.Age</td>
                            <td>@person.BirthPlace</td>
                            <td>
                                <a class="btn btn-success" asp-controller="Rookies" asp-action="Edit" asp-route-index="@index">Edit</a>
                                @* <a class="btn btn-danger" asp-controller="Rookies" asp-action="Delete" asp-route-index="@index">Delete</a> *@                        
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Delete
                                </button>
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Comfirmation</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete this item?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <a class="btn btn-danger" asp-controller="Rookies" asp-action="Delete" asp-route-index="@index">Confirm</a>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }   
                }
            </tbody>
        </table>
    </div>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

