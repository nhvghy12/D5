@model List<Person>
@{
    ViewData["Title"] = "Member List";
}

<div class="text-center">
    <h1 class="display-4">Member List</h1>
    <div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Full Name</th>
      <th scope="col">Gender</th>
      @* <th scope="col">DateofBirth</th> *@
      <th scope="col">Age</th>
      <th scope="col">BirthPlace</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null)
    {
        @for (int index = 1; index <= Model.Count; index++)
        {
            var person = Model[index - 1];
            <tr>
                <th scope="row">@index</th>
                <td>@Html.DisplayFor(modelItem => person.FullName)</td>
                <td>@Html.DisplayFor(modelItem => person.Gender)</td>
                @* <td>@Html.DisplayFor(modelItem => person.DateOfBirth.ToString("dd MMM yyyy"))</td> *@
                <td>@Html.DisplayFor(modelItem => person.Age)</td>
                <td>@Html.DisplayFor(modelItem => person.BirthPlace)</td>
                <td>
                    <button type="button" class="btn btn-success">Edit</button>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                        Delete
                    </button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                ...
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }   
    }
  </tbody>
</table>
    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
